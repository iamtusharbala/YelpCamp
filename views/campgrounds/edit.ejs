<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">
                        Title
                    </label>
                    <input type="text" class="form-control" name="title" id="title" value="<%=campground.title %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="image" id="image" value="<%=campground.image %>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="location" id="location"
                        value="<%=campground.location %>">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="price"
                            id="price" value="<%=campground.price %>">
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Leave a description here" id="description"
                        name="description" style="height: 100px"><%=campground.description %></textarea>
                    <label for="description">Description</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-secondary">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Go Back</a>
        </div>
    </div>